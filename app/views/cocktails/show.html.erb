<div class="card w-50 mx-auto my-3">
  <div class="container d-flex justify-content-center align-items-center">
    <% if @cocktail.photo.attached? %>
        <%= cl_image_tag @cocktail.photo.key, width: 400, crop: :scale %>
      <% end %>
    <div class="container">
      <h2><%= @cocktail.name %></h2>

      <h5>Ingredients:</h5>
      <ul>
        <% @doses.each do |dose| %>
          <li><%= Ingredient.find(dose.ingredient_id).name %>: <%= dose.description %>&nbsp;&nbsp;
            <sup><%= link_to dose_path(dose), method: :delete, data: { confirm: "Are you sure you want to delete?" } do %>
            <%= icon('fas', 'times')%>
          <% end %></sup></li>
        <% end %>
      </ul>

      <p class="mt-3">
      <%= link_to new_cocktail_dose_path(@cocktail) do %>
        <%= icon('fas', 'plus') %> Add ingredient
      <% end %><br>
      <%= link_to cocktails_path do %>
        <%= icon('fa', 'undo')%> Back to All
      <% end %>
      </p>
    </div>
  </div>
</div>
